{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "types": [
      "webpack-env",
      "jest"
    ],
    "paths": {
      "@/*": [
        "client/src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "*/src/**/*.ts",
    "*/src/**/*.tsx",
    "*/src/**/*.vue",
    "*/tests/**/*.ts",
    "*/tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
